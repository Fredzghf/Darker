<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:theme="@android:style/Theme.Black"
    android:orientation="vertical"
    android:id="@+id/settings"
    android:padding="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/brightness"
                    android:progress="50"
                    android:theme="@style/AppTheme"
                    android:progressDrawable="@drawable/seekbar"
                    android:thumb="@drawable/animated_seekbar_thumb"
                    android:splitTrack="false"
                    android:maxHeight="60dp"
                    android:minHeight="60dp"/>

                <ImageView
                    android:id="@+id/brightness_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_wb_sunny_24"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="30dp"
                    android:fontFamily="@font/roboto"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/colorPrimary"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_height="60dp"
                    android:layout_width="match_parent"
                    style="@style/Theme.Widget.AppCompat.Button"
                    android:background="@drawable/button_notif">
                        <TextView
                            android:id="@+id/quick1Brightness"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text="20%"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/animated_button"
                            android:paddingLeft="4dp"
                            android:textSize="30dp"></TextView>
                        <ImageView
                            android:id="@+id/quick1Save"
                            android:layout_height="60dp"
                            android:layout_width="60dp"
                            android:src="@drawable/ic_baseline_save_24"
                            style="@style/Theme.Widget.AppCompat.Button"
                            android:padding="4dp"
                            android:layout_weight="0"
                            android:background="@drawable/animated_button_blue"></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="60dp"
                    android:layout_width="match_parent"
                    style="@style/Theme.Widget.AppCompat.Button"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_notif">
                        <TextView
                            android:id="@+id/quick2Brightness"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text="50%"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/animated_button"
                            android:paddingLeft="4dp"
                            android:textSize="30dp"></TextView>
                        <ImageView
                            android:id="@+id/quick2Save"
                            android:layout_height="60dp"
                            android:layout_width="60dp"
                            android:src="@drawable/ic_baseline_save_24"
                            style="@style/Theme.Widget.AppCompat.Button"
                            android:padding="4dp"
                            android:layout_weight="0"
                            android:background="@drawable/animated_button_blue"></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="60dp"
                    android:layout_width="match_parent"
                    style="@style/Theme.Widget.AppCompat.Button"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_notif">
                        <TextView
                            android:id="@+id/quick3Brightness"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text="80%"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/animated_button"
                            android:paddingLeft="4dp"
                            android:textSize="30dp"></TextView>
                        <ImageView
                            android:id="@+id/quick3Save"
                            android:layout_height="60dp"
                            android:layout_width="60dp"
                            android:src="@drawable/ic_baseline_save_24"
                            style="@style/Theme.Widget.AppCompat.Button"
                            android:padding="4dp"
                            android:layout_weight="0"
                            android:background="@drawable/animated_button_blue"></ImageView>
                </LinearLayout>
        </LinearLayout>
</LinearLayout>
</ScrollView>