<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:minHeight="60dp">
    <RelativeLayout
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:layout_width="wrap_content"
        android:layout_weight="0">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_brightness_high_24" />

        <TextView
            android:id="@+id/textNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:fontFamily="@font/roboto"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical"
        android:layout_marginRight="5dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/quick1"
            android:text="20%"
            style="@style/Theme.Widget.AppCompat.Button"
            android:layout_width="50dp"
            android:layout_weight="0"
            android:background="@drawable/animated_button_notif"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/quick2"
            android:text="50%"
            style="@style/Theme.Widget.AppCompat.Button"
            android:layout_width="50dp"
            android:layout_weight="0"
            android:background="@drawable/animated_button_notif"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="16dp"/>

        <Button
            android:minWidth="40dp"
            android:id="@+id/quick3"
            android:text="80%"
            style="@style/Theme.Widget.AppCompat.Button"
            android:layout_width="50dp"
            android:layout_weight="0"
            android:background="@drawable/animated_button_notif"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="16dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="end|center_vertical"
        android:layout_weight="0">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="80dp"
            android:layout_height="35dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/seekbar_notif"
            android:progress="50"
            android:layout_centerInParent="true"></ProgressBar>
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:gravity="center">

            <Button
                android:id="@+id/minus"
                android:text="âˆ’"
                style="@style/Theme.Widget.AppCompat.Button"
                android:background="@drawable/animated_button_left"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/brightness"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="50%"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/plus"
                android:text="+"
                style="@style/Theme.Widget.AppCompat.Button"
                android:background="@drawable/animated_button_right"
                android:layout_alignParentRight="true"
                android:gravity="end|center_vertical"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textSize="16dp"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>