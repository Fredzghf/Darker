<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
android:enterFadeDuration="0"
android:exitFadeDuration="0">
<item
    android:state_pressed="true">
    <layer-list>
        <item>
            <shape>
                <size
                    android:height="35dp"
                    android:width="40dp"
                    />
                <solid android:color="#88FFFFFF"/>
            </shape>
        </item>
        <item android:bottom="-2dp">
            <rotate
                android:fromDegrees="100"
                android:pivotX="90%"
                android:pivotY="90%">
                <shape>
                    <size
                        android:height="35dp"
                        android:width="40dp"
                        />
                    <solid android:color="@color/colorPrimary"/>
                    <stroke android:width="1.5dp" android:color="@color/white"></stroke>
                </shape>
            </rotate>
        </item>
    </layer-list>
</item>
<item>
    <layer-list>
        <item>
            <shape>
                <size
                    android:height="35dp"
                    android:width="40dp"
                    />
                <solid android:color="@android:color/transparent"/>
            </shape>
        </item>
        <item android:bottom="-2dp">
            <rotate
                android:fromDegrees="100"
                android:pivotX="90%"
                android:pivotY="90%">
                <shape>
                    <size
                        android:height="35dp"
                        android:width="40dp"
                        />
                    <solid android:color="@color/colorPrimary"/>
                    <stroke android:width="1.5dp" android:color="@color/white"></stroke>
                </shape>
            </rotate>
        </item>
    </layer-list>
</item>
</selector>