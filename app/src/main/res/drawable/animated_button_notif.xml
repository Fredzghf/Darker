<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="0"
    android:exitFadeDuration="0">
    <item
        android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <size
                        android:height="35dp"
                        android:width="50dp"
                        />
                    <solid android:color="@color/colorAccent"/>
                    <stroke android:width="1.5dp" android:color="@color/white"></stroke>

                    <corners android:radius="3dp"></corners>

                </shape>
            </item>
            <item>
                <shape>
                    <size
                        android:height="35dp"
                        android:width="50dp"
                        />
                    <solid android:color="#88FFFFFF"/>
                    <stroke android:width="1.5dp" android:color="@color/white"></stroke>

                    <corners android:radius="3dp"></corners>

                </shape>
            </item>
            <item android:bottom="-2dp">
                <rotate
                    android:fromDegrees="100"
                    android:pivotX="90%"
                    android:pivotY="90%">
                    <shape>
                        <size
                            android:height="35dp"
                            android:width="50dp"
                            />
                        <solid android:color="@color/colorPrimary"/>
                        <stroke android:width="1.5dp" android:color="@color/white"></stroke>
                    </shape>
                </rotate>
            </item>
            <item android:top="-2dp">
                <rotate
                    android:fromDegrees="100"
                    android:pivotX="10%"
                    android:pivotY="10%">
                    <shape>
                        <size
                            android:height="35dp"
                            android:width="50dp"
                            />
                        <solid android:color="@color/colorPrimary"/>
                        <stroke android:width="1.5dp" android:color="@color/white"></stroke>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <size
                        android:height="35dp"
                        android:width="50dp"
                        />
                    <gradient android:type="radial"
                        android:startColor="@color/colorAccent"
                        android:centerColor="@color/colorAccent"
                        android:endColor="@color/light_blue"
                        android:gradientRadius="80%" />
                    <stroke android:width="1.5dp" android:color="@color/white"></stroke>

                    <corners android:radius="3dp"></corners>

                </shape>
            </item>
            <item android:bottom="-2dp">
                <rotate
                    android:fromDegrees="100"
                    android:pivotX="90%"
                    android:pivotY="90%">
                    <shape>
                        <size
                            android:height="35dp"
                            android:width="50dp"
                            />
                        <solid android:color="@color/colorPrimary"/>
                        <stroke android:width="1.5dp" android:color="@color/white"></stroke>
                    </shape>
                </rotate>
            </item>
            <item android:top="-2dp">
                <rotate
                    android:fromDegrees="100"
                    android:pivotX="10%"
                    android:pivotY="10%">
                    <shape>
                        <size
                            android:height="35dp"
                            android:width="50dp"
                            />
                        <solid android:color="@color/colorPrimary"/>
                        <stroke android:width="1.5dp" android:color="@color/white"></stroke>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>